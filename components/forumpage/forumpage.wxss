/*推荐博主*/
.recommandAu {
  border-radius: 25rpx;
  position: relative;
  margin: 0 auto;
  width: 100%;
  height: 230rpx;
  box-shadow: 0px 0px 20rpx 0px rgba(172, 168, 168, 0.637);
}

/*横向导航*/
.swiper-nav {
  background-color: #fff;
  white-space: nowrap;
  width: 100%;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  height: 200rpx;
  overflow: hidden;
}

/*导航栏的文字和图片*/
.swiper-nav .item-nav {
  position: relative;
  top: 10rpx;
  padding: 32rpx;
  color: #999;
  font-size: 30rpx;
  cursor: pointer;
  display: inline-block;
}

.swiper-nav .active {
  color: #5ea9ff
}


.img-nav-list {
  display: flex;
  align-items: center;
}

.img-nav {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

/*推荐博主名称*/
.auName {
  position: relative;
  left: 10rpx;
  font-size: 30rpx;
}


/*话题*/
.topic {
  height: 200rpx;
  box-shadow: 0px 0px 20rpx 0px rgba(165, 162, 162, 0.521);
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  white-space: nowrap;
}

.topicContent {
  color: #70a4e0c7;
  font-weight: 550;
}

.topicContent:active {
  color: #546de5;
}

