/* components/myfollow/myfollow.wxss */



/*我的关注列表*/



.myfollow {
  width: 100%;
  height: 150rpx;

  display: flex;
}

/*我的关注除头像部分*/
.myfollow-another {
  width: 80%;
  display: flex;
  height: 100%;
  border-bottom: 1px solid rgba(166, 168, 168, 0.836);
}

/*关注头像*/
.myfollow-icon {
  width: 15%;
  
  padding: 10rpx 20rpx 10rpx 10rpx;

}

.myfollow-icon image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 20rpx 0px rgb(168, 168, 168);
}



/*关注人的信息 名字 简介*/
.myfollow-info {
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;

}

.myfollow-name {
  padding: 10rpx;
  padding-top: 15rpx;
  font-weight: 550;
  font-size: 40rpx;
}

.myfollow-bio {
  white-space: nowrap;
  padding: 10rpx 0rpx 10rpx 10rpx;
  color: #6c7177;
  font-size: 30rpx;
}

/*是否关注*/
/*未关注*/
.followon {
  width: 28%;
  height: 40%;
  border: 1px solid;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  margin-top: 30rpx;
  background-color: rgb(66, 187, 231);
  color: rgb(253, 253, 253);
  transition: 0.8s;
}

/*已关注*/
.followoff {
  width: 28%;
  height: 40%;
  border: 1px solid;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  margin-top: 30rpx;
  color: rgb(122, 122, 131);
  transition: 0.8s;
}