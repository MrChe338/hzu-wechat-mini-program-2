/* components/allarticles/articlepage/articlepage.wxss */

.article {
  width: 100%;

  overflow: scroll;

}

/*标题*/
.title {
  width: 100%;
  text-align: left;
  font-size: 40rpx;
  font-weight: 550;
  padding-left: 10rpx;
}

/*用户信息*/
.user-Info {
  width: 100%;
  height: 130rpx;

  display: flex;

}

/*头像*/
.user-icon {
  width: 15%;

  padding: 10rpx 10rpx 10rpx 20rpx;
}

.user-icon image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

/*name time*/
.user-name-time {
  width: 60%;
  display: flex;
  flex-direction: column;
  height: 100%;

}

.user-name {
  font-weight: 550;
  font-size: 40rpx;
  padding-top: 10rpx;
}

.publish-time {
  white-space: nowrap;
  color: #6c7177;
  font-size: 25rpx;
}

/*是否关注*/
@import"/assets/follow.wxss";

.followon,
.followoff {
  width: 20%;
  margin-top: 20rpx;
  margin-right: 5rpx;
  border-radius: 10rpx;
  height: 30%;
}



/*正文内容*/
.content {
  width: 99%;
  padding: 0rpx 10rpx 0rpx 10rpx;
  overflow: scroll;
  font-size: 29rpx;
  white-space: pre-wrap;
  border-bottom: #c5c9ce 1rpx solid;

}

/*tag栏*/
.tagList {

  display: flex;
  width: 100%;
  white-space: nowrap;
  height: 100rpx;
  padding: 20rpx 10rpx 0 0;
}

.tag {
  font-size: 23rpx;
  border-radius: 10rpx;
  border: 1px solid #348be2ea;
  padding: 8rpx;
  height: 40rpx;
  color: rgb(27, 171, 228);
  margin-left: 10rpx;
}

/*评论区*/
.comment-section {
  width: 100%;
  border-top: #c5c9ce9d 1rpx solid;
}

/*评论区主体*/
.comment-list {
  border-bottom: #c5c9ce8e 1rpx solid;
  /* border-top: #c5c9ce 1rpx solid; */
  display: flex;

}

/*弔人头像*/
.comment-icon {
  width: 12%;
  padding: 10rpx 10rpx 10rpx 10rpx;
}

.comment-icon image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

/*评论人信息*/
.comment-info {
  width: 90%;
  display: flex;
  flex-direction: column;
  height: 30%;
  padding: 5rpx 5rpx 0rpx 5rpx;
  height: 100%;
}

.comment-name {
  font-size: 30rpx;
  font-weight: 550;
}

.comment-time {
  font-size: 20rpx;
}

/*评论内容*/
.comment-content {
  width: 100%;
  height: 80%;
  text-align: left;

}

/*发送评论区*/

.postComment {
  width: 100%;
  height: 110rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  background: #ffffff;

}

/*发表评论*/
.comment-post {
  width: 50%;
  height: 40%;
  border: 1px solid #6c7177;
  border-radius: 20rpx;
  line-height: 30rpx;
  padding: 8rpx;
  display: flex;
  align-items: center;

}

/*喜欢 收藏*/
.like-collect {
  display: flex;
  justify-content: center;
  margin-left: 20%;
  width: 20%;
}

.like-collect image {
  width: 45rpx;
  height: 45rpx;
}

.like,
.collect,
.total-comment {
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
}