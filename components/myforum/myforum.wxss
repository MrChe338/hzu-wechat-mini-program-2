/* components/myforum/myforum.wxss */
/*头图*/
.headerImage {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  z-index: 100;
}

/*我的论坛主体*/
.myforum {
  width: 100%;
}

.myInfo {
  width: 100%;
  display: flex;
  height: 500rpx;
  bottom: 60rpx;
  flex-direction: column;
  position: relative;
  /* box-shadow: 0px 0px 20rpx 0px rgb(190, 187, 187); */
}

/*我的论坛信息头部 包括用户头像 名称 点赞 收藏 简介的内容*/
.myInfo-header {
  background: rgb(255, 255, 255);
  width: 100%;
  height: 30%;
  display: flex;

}

.myInfo-header-Icon {
  width: 35%;
  height: 60%;
  position: relative;
  padding-left: 50rpx;
}

.myInfo-header-right {
  width: 70%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 20rpx;
}

.fans {

  margin-left: 60rpx;
  font-size: 30rpx;
  text-align: center;
  color: #86909c;


}

.myInfo-header-Icon image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  position: relative;
  bottom: 30rpx;
}

/*编辑资料*/
.myInfo-center {
  width: 100%;
  display: flex;
}

.editInformation {
  width: 60%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10%;
}

.editInfo {
  padding: 10rpx;
  width: 70%;
  font-size: 35rpx;
  box-shadow: 0px 0px 10rpx 0px rgba(122, 170, 233, 0.74);
  text-align: center;
  border-radius: 10rpx;
  background: rgb(250, 250, 250);
  color: rgba(27, 152, 255, 0.856);
  position: relative;
  bottom: 30rpx;
}

.myInfo-center-userInfo {
  width: 35%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.userName {
  display: flex;
  align-items: center;
  font-size: 40rpx;
  font-weight: 550;
  color: #404041;
}

.userId {
  font-size: 23rpx;
  color: #86909c;
}


/*我的论坛信息下部包括简介 获赞/收藏 展开详情页*/
.myInfo-body {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  height: 40%;
  border-bottom: 1px solid rgb(180, 173, 173);
}

.introduction {
  font-size: 30rpx;
  color: #86909c;
}

.myTag {
  margin-top: 20rpx;
  padding: 5rpx;
  box-shadow: 0px 0px 10rpx 0px rgba(115, 118, 122, 0.74);
  border-radius: 14rpx;
  width: 30%;
  text-align: center;
}

.myfollow {
  margin-top: 20rpx;
  text-align: right;
  padding-right: 30rpx;
  font-size: 23rpx;
  color: #86909c;
}

/*我的发布 我的收藏 我的关注*/
.myrouter {
  height: 500rpx;
  position: relative;
}