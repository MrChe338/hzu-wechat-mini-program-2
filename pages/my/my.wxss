.wxmlbackground{
    height: 100%;
  background-image: url('https://img.tukuppt.com/ad_preview/00/18/46/5c99e849bb921.jpg!/fw/980');
  background-size: cover;
  background-attachment: fixed;
}/*小程序页面的背景图*/
.container{
    height: 100rpx;
}
.program-list{
  padding: 15rpx;
  
}
.program-item{
    margin: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    background-color:seashell;
    width: 600rpx;
    border-radius: 15rpx;
    height: 200rpx;
}/*每一个item项的属性*/
.program-title{
    font-size: 40rpx;
    margin-left: 15rpx;
}/*标题的字体样式*/
.program-details{
    margin-left: 15rpx;
    flex-direction: column;
    justify-content: space-around;
    display: flex;
}/*内容的字体样式*/
.program-detail{
    margin-left: 15rpx;
    text-overflow: ellipsis;      /*超出部分以省略号显示*/
    overflow: hidden; 
    width: 580rpx;  /*文本限制长度*/
    white-space: nowrap;/*不转行*/
    font-size: 30rpx;/*字体大小*/
    line-height: 24px;/*行间距*/
}/*项目简介的样式*/