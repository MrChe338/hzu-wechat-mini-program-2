.header {
  width: 750rpx;
  height: 138rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}

.left-btn, .right-btn {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 10rpx;
}

.left-btn {
  margin-right: 2px; /* 可以调整左右间距 */
}

.right-btn {
  margin-left: 2px; /* 可以调整左右间距 */
}
.nav-icon {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center center;
  /* 设置图片的适应方式 */
  background-size: contain; /* 图片宽高自适应并保持图片原始比例 */
}
.img{
  height: 150rpx;
  width: 50%;

}
.desc{
  width: 100rpx;
  height: 0rpx;
}

.container {
