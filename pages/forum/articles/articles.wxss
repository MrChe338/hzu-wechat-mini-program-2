/* pages/forum/articles.wxss */

input {
  border: 0.1px solid rgba(78, 77, 77, 0.253);
}

textarea {
  border: 0.1px solid rgba(78, 77, 77, 0.253);
  width: 100%;
  height: 300rpx;
  overflow: scroll;
}

/*图片区域*/
.imgArea {
  width: 100%;
  border: 1px solid rgba(187, 186, 186, 0.685);
  display: flex;
  flex-wrap: wrap;
}

.imgList {
  display: flex;
  flex-direction: row;
  width: 33.3%;
  align-items: center;
  justify-content: center;
}

.imgList image {
  width: 200rpx;
  height: 200rpx;
  padding: 10rpx;
 box-shadow: 0px 0px 10rpx 0px rgba(207, 205, 205, 0.815);
}