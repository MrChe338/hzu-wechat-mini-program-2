/* 搜索栏 */
.search {
  width: 100%;
  border: 1px solid rgba(172, 171, 171, 0.836);
  display: flex;
  border-radius: 30rpx;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
  position: relative;
  background: #f1f1f1;

}

.searchTab {
  height: 30rpx;
  font-size: 30rpx;
  width: 90%;
  color: rgb(150, 140, 150);
}

.searchIcon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 15%;
  right: 10%;
}

/* 论坛主体 */
.forumbody {
  height: 100%;
}


/*整个mptabs的顶部栏*/
.weui-tabs-bar__content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: fixed;
  z-index: 100;
  background: #ffffff;
  height: 100rpx;
  font-size: 32rpx;
}

/*tab的主体 即首页，全部帖子下的部分*/
.tab-content {
  height: 100%;
  overflow: scroll;
}

/*当前选中项的样式*/
.tab-bar-title__selected {
  font-size: 38rpx;
  border-bottom: blue;
}

/*tabs的标题栏*/
.weui-tabs-bar__title {
  /* font-size: 32rpx; */
  color: #1e3296;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  padding-right: 10rpx;

}

/*内容区域swiper的样式*/
.weui-tabs-swiper {

  border: 1px solid rgba(112, 109, 105, 0.527);
  height: 1500rpx;
}

